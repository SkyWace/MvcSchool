@model MVC.Views.Home.Salarie

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Salarie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" required/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prenom" class="control-label"></label>
                <input asp-for="Prenom" class="form-control" required/>
                <span asp-validation-for="Prenom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" required/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelephonePortable" class="control-label"></label>
                <input asp-for="TelephonePortable" class="form-control" required/>
                <span asp-validation-for="TelephonePortable" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Service" class="control-label"></label>
                <input asp-for="Service" class="form-control" required/>
                <span asp-validation-for="Service" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelephoneFix" class="control-label"></label>
                <input asp-for="TelephoneFix" class="form-control" required/>
                <span asp-validation-for="TelephoneFix" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VilleId" class="control-label"></label>
                <select asp-for="VilleId" class="form-control" asp-items="@ViewBag.Villes" required></select>
                <span asp-validation-for="VilleId" class="text-danger"></span> <!-- Utilisez VilleId au lieu de Ville -->
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
